# ========================================
# CelesteOS Predictive Maintenance Engine
# Environment Variables Template
# ========================================

# Copy this file to .env and fill in your values
# cp .env.example .env

# ========================================
# Supabase Configuration
# ========================================

# Supabase project URL
# Get this from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (NOT anon key!)
# Get this from: Supabase Dashboard > Settings > API > service_role key
SUPABASE_KEY=your-service-role-key-here

# ========================================
# Application Configuration
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# API server port (default: 8000)
PORT=8000

# ========================================
# Worker Configuration
# ========================================

# Enable/disable background worker
ENABLE_WORKER=true

# Worker schedule (cron format)
# Default: Every 6 hours at :00 minutes
WORKER_SCHEDULE=0 */6 * * *

# ========================================
# Optional: Advanced Configuration
# ========================================

# Database connection pool settings
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# API rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=60

# Cache TTL (seconds)
# CACHE_TTL=21600

# ========================================
# Optional: Monitoring & Observability
# ========================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Prometheus metrics endpoint
# ENABLE_METRICS=true
# METRICS_PORT=9090

# ========================================
# Security
# ========================================

# JWT secret for token validation (if using custom auth)
# JWT_SECRET=your-secret-key-here

# Allowed CORS origins (comma-separated)
# CORS_ORIGINS=https://app.celesteos.com,https://mobile.celesteos.com
