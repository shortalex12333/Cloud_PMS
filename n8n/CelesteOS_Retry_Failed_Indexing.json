          }
        ]
      ]
    },
    "Has Pending Docs?": {
      "main": [
        [
          {
            "node": "Split Into Batches",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Respond No Pending",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Split Into Batches": {
      "main": [
        [
          {
            "node": "Prepare Trigger Payload",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Count Results",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Prepare Trigger Payload": {
      "main": [
        [
          {
            "node": "Trigger Indexing",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Trigger Indexing": {
      "main": [
        [
          {
