    "view_state_id",
    "situation_id",
    "artefact_type",
    "artefact_id",
    "view_mode",
    "created_at"
  ],
  "properties": {
    "view_state_id": {
      "type": "string",
      "format": "uuid"
    },
    "situation_id": {
      "type": "string",
      "format": "uuid"
    },
    "artefact_type": {
      "type": "string"
    },
    "artefact_id": {
      "type": "string",
      "format": "uuid"
    },
    "view_mode": {
      "type": "string",
      "enum": ["viewer", "related"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
