# CelesteOS Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================================================
# Supabase Configuration (Required)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# Backend API Configuration (Required)
# ============================================================================
# CelesteOS backend API URL
# Production: https://pipeline-core.int.celeste7.ai
# Staging: https://staging-pipeline-core.int.celeste7.ai
# Local: http://localhost:8000
NEXT_PUBLIC_API_URL=https://pipeline-core.int.celeste7.ai

# ============================================================================
# Security Configuration (Required)
# ============================================================================
# Yacht signature salt - MUST match backend configuration
# This is used to compute SHA-256 signatures for yacht-based auth
# Generate a secure random string (e.g., openssl rand -hex 32)
# WARNING: Changing this will invalidate all existing signatures
NEXT_PUBLIC_YACHT_SALT=your-secret-salt-here

# ============================================================================
# Feature Flags (Optional)
# ============================================================================
# Enable React Query devtools in development
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable verbose API logging
NEXT_PUBLIC_DEBUG_API=false
