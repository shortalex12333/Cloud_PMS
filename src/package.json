{
  "name": "celeste-validation",
  "version": "1.0.0",
  "description": "CelesteOS Search API payload validation",
  "main": "dist/validation/validators.js",
  "types": "dist/validation/types.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.test.ts",
      "!**/dist/**"
    ]
  }
}
