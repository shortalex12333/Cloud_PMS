# CelesteOS Ingestion API Configuration
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_STORAGE_BUCKET=celesteos-documents

# Storage Configuration
TEMP_UPLOAD_DIR=/var/celesteos/uploads
MAX_CHUNK_SIZE=67108864
UPLOAD_TIMEOUT_HOURS=6

# Security
# Allowed extensions: .pdf,.docx,.xlsx,.pptx,.txt,.msg,.eml,.jpg,.jpeg,.png,.tiff,.bmp,.gif
MAX_FILE_SIZE=5368709120

# Rate Limiting
RATE_LIMIT_PER_YACHT_MINUTE=60
RATE_LIMIT_PER_YACHT_HOUR=1000

# n8n Configuration
N8N_WEBHOOK_URL=https://n8n.yourdomain.com/webhook/indexing-start
N8N_WEBHOOK_SECRET=your-webhook-secret-here

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
